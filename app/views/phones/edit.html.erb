<h1>Edit phone number</h1>

<% content_for(:title) do %>
   Edit Phone Number
<% end %>

<%= render('layouts/errors', :object => @contact) %>

<form action="/contacts/<%= @phone.contact.id %>/phones/<%= @phone.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="phone_number">Name</label>
  <input id="phone_number" name="phone[number]" type="text" value="<%= @phone.number %>">
  <button>Update Contact</button>
</form>
