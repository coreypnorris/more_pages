<h1>Edit email address</h1>

<% content_for(:title) do %>
   Edit Email Address
<% end %>

<%= render('layouts/errors', :object => @contact) %>

<form action="/contacts/<%= @email.contact.id %>/emails/<%= @email.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="email_address">Name</label>
  <input id="email_address" name="email[address]" type="text" value="<%= @email.address %>">
  <button>Update Contact</button>
</form>
